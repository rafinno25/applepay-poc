# Server Configuration
PORT=3000
NODE_ENV=development

# Apple Pay Configuration
# Your Apple Pay Merchant ID (e.g., merchant.com.yourcompany.app)
# IMPORTANT: Update this with your actual Merchant ID (e.g., merchant.org.aiprotection)
APPLE_MERCHANT_ID=merchant.org.aiprotection

# Path to Apple Merchant Identity Certificate (.pem file)
# For Docker: Use /certs/apple-merchant-cert.pem
# For local: Use ./certs/apple-merchant-cert.pem or absolute path
APPLE_MERCHANT_CERT_PATH=./certs/apple-merchant-cert.pem

# Path to Apple Merchant Private Key (.pem file)
# For Docker: Use /certs/apple-merchant-key.pem
# For local: Use ./certs/apple-merchant-key.pem or absolute path
APPLE_MERCHANT_KEY_PATH=./certs/apple-merchant-key.pem

# Authorize.Net Configuration
# Your Authorize.Net API Login ID
AUTHORIZE_NET_API_LOGIN_ID=your_api_login_id_here

# Your Authorize.Net Transaction Key
AUTHORIZE_NET_TRANSACTION_KEY=your_transaction_key_here

# Authorize.Net Mode: 'sandbox' or 'production'
AUTHORIZE_NET_MODE=sandbox

# Authorize.Net Webhook Signature Key (optional, for webhook verification)
# Get this from: Merchant Interface > Account > Settings > Webhooks > Signature Key
AUTHORIZE_NET_SIGNATURE_KEY=

# Payment Configuration
# Default payment amount for POC (in dollars, e.g., 10.00)
PAYMENT_AMOUNT=10.00

